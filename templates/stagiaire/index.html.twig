{% extends 'base.html.twig' %}

{% block title %}Liste des Stagiaires{% endblock %}

{% block body %}

    <h1>Liste des Stagiaires</h1>

    <section class="section_listesFormateursStagiaires">
        <table>
            <thead>
                <tr>
                    <th>Nom Prenom</th>
                    <th>Email</th>
                    <th>Sessions</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for stagiaire in stagiaires %}
                    <tr>
                        <td>{{ stagiaire.nom }} {{stagiaire.prenom}}</td>
                        <td>{{ stagiaire.email }}</td>
                        <td class="nbr_session">{{ stagiaire.sessions | length }}</td>
                        <td><a href="{{ path('app_ficheStagiaire', {'id' : stagiaire.id} ) }}" class="container_formateur_stagiaire"><i class="ri-eye-line"></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </section>

{% endblock %}
